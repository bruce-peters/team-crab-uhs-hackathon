{
  "manifest_version": 3,
  "name": "Canvas AI Study Assistant - MVP",
  "version": "1.0.0",
  "description": "A minimal study assistant that shows a simple message on Canvas pages.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.canvaslms.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas AI Study Assistant - MVP"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*", "https://*.canvaslms.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "assets/*"],
      "matches": ["https://*.instructure.com/*", "https://*.canvaslms.com/*"]
    }
  ]
}

