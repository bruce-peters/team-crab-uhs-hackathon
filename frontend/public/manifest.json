{
  "manifest_version": 3,
  "name": "Canvas AI Study Assistant",
  "version": "1.0.0",
  "description": "An AI-powered study assistant that integrates with Canvas to help students manage assignments and get personalized help using Gemini AI.",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.instructure.com/*",
    "https://*.canvaslms.com/*"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.canvaslms.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas AI Study Assistant Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://*.canvaslms.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "assets/*"],
      "matches": [
        "https://*.instructure.com/*",
        "https://*.canvaslms.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}